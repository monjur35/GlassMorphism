<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="0dp"
        android:left="0dp"
        android:right="2dp"
        android:top="0dp">

        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <stroke
                android:width="2dp"
                android:color="#5f7172" />
            <solid android:color="#20000000" />
            <gradient
                android:angle="0"
                android:endColor="#46484a"
                android:startColor="#adadae" />
        </shape>
    </item>


</layer-list>